<resources>

    <!-- Base application theme. -->
    <style name="LightSquash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainYellow</item>
        <item name="colorPrimaryDark">@color/secondaryYellow</item>
        <item name="panelBackground">@color/post</item>
        <item name="colorAccent">@color/post</item>
        <item name="controlBackground">@drawable/ic_background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/secondaryYellow</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkSquash" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkMainYellow</item>
        <item name="colorPrimaryDark">@color/darkSecondaryYellow</item>
        <item name="panelBackground">@color/darkPost</item>
        <item name="colorAccent">@color/post</item>
        <item name="colorBackgroundFloating">@drawable/ic_dark_background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/darkSecondAccentYellow</item>
        <item name="android:textColorPrimary">@color/post</item>
        <item name="android:textColor">@color/post</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="LightSquash.NoActionBar" parent="LightSquash">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerItemStyleHomeFragment" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="SpinnerDropdownItemStyleHomeFragment" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:background">@drawable/spinner_item_border</item>
    </style>

</resources>
