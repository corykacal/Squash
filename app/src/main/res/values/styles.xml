<resources>

    <!-- Base application theme. -->
    <style name="LightSquash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainYellow</item>
        <item name="colorPrimaryDark">@color/secondaryYellow</item>
        <item name="colorAccent">@color/post</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/secondaryYellow</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightSquash.NoActionBar" parent="LightSquash">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerThemeList">
        <item name="android:textColor">@color/titleText</item>
        <item name="android:textSize">22sp</item>
        <item name="android:radius">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SpinnerTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
