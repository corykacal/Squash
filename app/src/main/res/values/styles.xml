<resources>

    <!-- Base application theme. -->
    <style name="LightSquash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mainYellow</item>
        <item name="colorPrimaryDark">@color/secondaryYellow</item>
        <item name="colorAccent">@color/post</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/secondaryYellow</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LightSquash.NoActionBar" parent="LightSquash">
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerItemStyleHomeFragment" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="SpinnerDropdownItemStyleHomeFragment" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:paddingBottom">12dp</item>
    </style>

</resources>
